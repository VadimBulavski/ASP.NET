@model IEnumerable<DomainObject.Entitys.New>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
</head>
<body>
    <div> 
        <h1>Admin News</h1>
        @Html.ActionLink("Create New", "Create", new { controller = "Admin", area = "Admin" })
        @Html.ActionLink("Go to News", "Index", new { controller = "News", area = "News" })
        @foreach(var item in Model)
        {
            <table class="table">
                <tr>
                    <td style="font-size:x-large">
                        @Html.DisplayFor(itemModel => item.Header)
                    </td>
                    <td>

                        @* @Html.ActionLink("Read New", "Read", new { controller = "Admin", area = "Admin" })<br />*@
                        @Html.ActionLink("Update New", "Read", new { controller = "Admin", area = "Admin", id = item.NewsID }) |
                        @Html.ActionLink("Delete New", "Delete", new { controller = "Admin", area = "Admin", id = item.NewsID })
                        
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(itemModel => item.Body)
                    </td>
                    
                </tr>
            </table>
        }

        
    </div>
</body>
</html>
