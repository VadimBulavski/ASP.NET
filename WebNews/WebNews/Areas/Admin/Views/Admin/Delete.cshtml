@model DomainObject.Entitys.New
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div>
        <h1>Delete New</h1>
            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Header, new { @class = "control-label col-md-2" })
                        @Model.Header
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Body, new { @class = "control-label col-md-2" })
                        @Model.Body
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Hot, new { @class = "control-label col-md-2" })
                        @Model.Hot
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Type, new { @class = "control-label col-md-2" })
                        @Model.Type
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-default" />
                    </div>
                </div>
            </div>
            @Html.ActionLink("Back", "Index", new { controller = "Admin", area = "Admin" })

        </div>
    </body>
</html>
