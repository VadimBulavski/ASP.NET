@model IEnumerable<DomainObject.Entitys.New>
@{
    Layout = null;
}
<body>
    <script src='@Url.Content("~/Scripts/jquery-3.1.1.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.js")' type="text/javascript"></script>
    @foreach (var item in Model)
    {
        <table class="table">
            <tr>
                <td style="font-size:x-large">
                    <p>@Html.DisplayFor(itemModel => item.Header)</p>
                </td>
                <td style="float:right">
                    @Html.DisplayFor(itemModel => item.CreateDate)
                </td>
            </tr>
            <tr>
                <td>
                    <p>@Html.DisplayFor(itemModel => item.Body)</p>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Update New", "Update", new { controller = "Admin", area = "Admin", id = item.NewsID }) |
                    @Html.ActionLink("Delete New", "Delete", new { controller = "Admin", area = "Admin", id = item.NewsID })
                </td>
            </tr>
        </table>
    }

    <script>
        var replaceWith = document.createElement('input'),//$('<input type="text" />'),
            connectWith = document.createElement('input');//$('<input type="hidden"/>');

        replaceWith.type = "text";
        connectWith.type = "hidden";
        

        $('p').click = function () {

            var elem = $(this);

            elem.hide();
            elem.after(replaceWith);
            replaceWith.focus();

            replaceWith.blur(function () {

                if ($(this).val() != "") {
                    $(connectWith).val($(this).val()).change();
                    elem.text($(this).val());
                }

                $(this).remove();
                elem.show();
            });
        };
        //$('p').inlineEdit(replaceWith, connectWith);
        var collectionElement = document.getElementsByTagName('p');
        for (var i = 0; i < collectionElement.length; ++i)
        {
            
        }

        
    </script>

